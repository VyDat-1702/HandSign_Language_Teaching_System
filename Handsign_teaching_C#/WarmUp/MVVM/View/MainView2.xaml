<UserControl x:Class="WarmUp.MVVM.View.MainView2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarmUp.MVVM.View"
             xmlns:mainview="clr-namespace:WarmUp.MVVM.ViewModel"
             mc:Ignorable="d"
             Height="450" Width="800"
             Background="Transparent"
             >
    <UserControl.DataContext>
        <mainview:CameraViewModel/>
    </UserControl.DataContext>
    <Border CornerRadius="40"
            Style="{StaticResource border_style}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center"
                        VerticalAlignment="Top">
                <Border CornerRadius="40"
                        Width="200"
                        Height="200"
                        BorderThickness="5"
                        BorderBrush="#f6bd60"
                        Margin="0, 30, 0, 0"
                        Background="#f7ede2">
                    <Image Source="{Binding CameraFrame}"
                        Width="170"
                        Height="170"></Image>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">
                <Border CornerRadius="40"
                        Width="200"
                        Height="200"
                        BorderThickness="5"
                        BorderBrush="#f6bd60"
                        Margin="0, 30, 0, 0"
                        Background="#f7ede2">
                    <Image Source="{Binding Processing_CameraFrame}"
                        Width="170"
                        Height="170"></Image>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Style="{StaticResource btn_bottom_style}"
                        Content="Start" Height="120"
                        Width="100"
                        Command="{Binding StartCameraCommand}">

                </Button>
                <Button Style="{StaticResource btn_bottom_style}"
                        Content="Capture" Height="120"
                        Margin="90, 0, 90, 0"
                        Width="100"
                        Command="{Binding CaptureCommand}"></Button>
                <Button Style="{StaticResource btn_bottom_style}"
                        Content="Check" Height="120"
                        Command="{Binding CheckCommand}"
                        Width="100" ></Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
